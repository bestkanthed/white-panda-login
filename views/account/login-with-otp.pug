extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Sign in
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='phone') Phone
      .col-md-7
        input.form-control(type='number', name='phone', id='phone', placeholder='Ex: 8828291950', autofocus, autocomplete='phone', required)
    .form-group
      .offset-md-3.col-md-7.pl-2
        button.col-md-3.btn.btn-primary(type='submit')
          i.far.fa-user.fa-sm
          | Send OTP
        a.btn.btn-link(href='/login') Login with Email
    .form-group
      .offset-md-3.col-md-7.pl-2
        hr
