extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3='Verify OTP sent to '+phone 
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='otp') OTP
      .col-md-7
        input.form-control(type='number', name='otp', id='otp', placeholder='', autofocus, required)
    .form-group
      .offset-md-3.col-md-7.pl-2
        button.col-md-3.btn.btn-primary(type='submit')
          i.far.fa-user.fa-sm
          | Verfy
        a.btn.btn-link(href='/login-with-otp') Change Phone?